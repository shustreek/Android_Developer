<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/standard_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/standard_activity"
        app:layout_constraintBottom_toTopOf="@+id/single_task_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/single_top_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/single_top_activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single_task_btn" />

    <Button
        android:id="@+id/single_task_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/single_task_activity"
        app:layout_constraintBottom_toTopOf="@+id/single_top_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/standard_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>